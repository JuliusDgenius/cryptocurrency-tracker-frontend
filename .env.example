# ========================================
# CRYPTO PORTFOLIO TRACKER - FRONTEND
# Environment Configuration
# ========================================

# ========================================
# API Configuration
# ========================================

# Backend API URL (used for proxy and direct API calls)
VITE_API_URL=http://localhost:3000

# ========================================
# Development Server Configuration
# ========================================

# Development server port (Vite dev server)
VITE_DEV_PORT=5173

# Preview server port (for production builds)
VITE_PREVIEW_PORT=4173

# ========================================
# Environment & Build Configuration
# ========================================

# Node environment (development, production, test)
NODE_ENV=development

# ========================================
# Application Configuration
# ========================================

# Application title (used in HTML title and potentially UI)
VITE_APP_TITLE=Crypto Portfolio Tracker

# Application version
VITE_APP_VERSION=1.0.0

# ========================================
# Feature Flags
# ========================================

# Enable/disable demo mode
VITE_ENABLE_DEMO_MODE=true

# Enable/disable price streaming
VITE_ENABLE_PRICE_STREAM=true

# Enable/disable real-time updates
VITE_ENABLE_REALTIME_UPDATES=true

# ========================================
# Security Configuration
# ========================================

# Enable HTTPS in development (for secure cookies)
VITE_ENABLE_HTTPS=false

# ========================================
# Debug & Logging
# ========================================

# Enable debug mode
VITE_DEBUG=false

# Enable verbose logging
VITE_VERBOSE_LOGGING=false

# ========================================
# Performance Configuration
# ========================================

# Enable source maps in production builds
VITE_ENABLE_SOURCE_MAPS=false

# Chunk size warning limit (in KB)
VITE_CHUNK_SIZE_WARNING_LIMIT=1000

# ========================================
# External Services (if needed in future)
# ========================================

# CoinGecko API URL (if using external API)
VITE_COINGECKO_API_URL=https://api.coingecko.com/api/v3

# WebSocket URL for real-time data (if different from API)
VITE_WEBSOCKET_URL=ws://localhost:3000

# ========================================
# Development Tools
# ========================================

# Enable React DevTools
VITE_ENABLE_REACT_DEVTOOLS=true

# Enable Vite DevTools
VITE_ENABLE_VITE_DEVTOOLS=true
